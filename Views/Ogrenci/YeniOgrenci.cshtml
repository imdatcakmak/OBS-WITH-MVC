@model OgrenciNotMvc.Models.EntityFramework.Tbl_Ogrenciler
@{
    ViewBag.Title = "YeniOgrenci";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" class="form-group">
    <div>
        <label>Öğrenci Adı</label>
        <input type="text" class="form-control" name="OGRAD" />
    </div>
    <br />
    <div>
        <label>Öğrenci Soyadı</label>
        <input type="text" class="form-control" name="OGRSOYAD" />
    </div>

    <br />
    <div>
        <label>Öğrenci Fotoğraf</label>
        <input type="text" class="form-control" name="OGRFOTO" />
    </div>

    <br />
    <div>
        <label>Öğrenci Cinsiyet</label>
        <input type="text" class="form-control" name="OGRCINSIYET" />
    </div>

    <br />
    <div>
        <label>Öğrenci Kulüp</label>
        @Html.DropDownListFor(m=>m.Tbl_Kulupler.KULUPID,(List<SelectListItem>)ViewBag.dgr,new {@class="form-control" })
    </div>

    <div style="margin-top:10px">
        <button class="btn btn-primary">Öğrenci Ekle</button>

    </div>
</form>

